@model StudentRegistration.Models.CourseModel

<h2>Delete Course</h2>

<div>
    <h4>Are you sure you want to delete this course?</h4>
    <h5>Course Details</h5>
    <dl class="row">
        <dt class="col-sm-2">Course Code:</dt>
        <dd class="col-sm-10">@Model.CourseCode</dd>

        <dt class="col-sm-2">Course Name:</dt>
        <dd class="col-sm-10">@Model.CourseName</dd>

        <dt class="col-sm-2">Teacher Name:</dt>
        <dd class="col-sm-10">@Model.TeacherName</dd>

        <dt class="col-sm-2">Start Date:</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-2">End Date:</dt>
        <dd class="col-sm-10">@Model.EndDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Available Spaces:</dt>
        <dd class="col-sm-10">@Model.AvailableSpaces</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CourseId" />
        <button type="submit" class="btn btn-danger">Delete</button>
</form>
</div>