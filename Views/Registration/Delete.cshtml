@model StudentRegistration.Models.RegistrationModel

<h2>Delete Registration</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="StudentId" />
    <input type="hidden" asp-for="CourseId" />

    <div class="form-group">
        <label asp-for="Student.FirstName">Student Name:</label>
        <input class="form-control" asp-for="Student.FirstName" disabled />
    </div>

    <div class="form-group">
        <label asp-for="Course.CourseName">Course:</label>
        <input class="form-control" asp-for="Course.CourseName" disabled />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
