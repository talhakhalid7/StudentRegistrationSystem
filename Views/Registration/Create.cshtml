@model StudentRegistration.Models.RegistrationModel

<h2>Create Registration</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="StudentId">Student:</label>
        <select class="form-control" asp-for="StudentId" asp-items="@ViewBag.Students">
            <option value="">-- Select Student --</option>
        </select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="CourseId">Course:</label>
        <select class="form-control" asp-for="CourseId" asp-items="@ViewBag.Courses">
            <option value="">-- Select Course --</option>
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Register</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
